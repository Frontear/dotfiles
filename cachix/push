#!/usr/bin/env nix-shell
#! nix-shell -i bash -p cachix

pushd "$(dirname $0)" >> /dev/null

if [ -z "$CACHIX_AUTH_TOKEN" ]; then
    echo "You dropped your \$CACHIX_AUTH_TOKEN somewhere, no push for you" >> /dev/stderr
    exit 1
fi

HOSTNAME=$(hostname) nix-build . --no-out-link | cachix push frontear

popd >> /dev/null